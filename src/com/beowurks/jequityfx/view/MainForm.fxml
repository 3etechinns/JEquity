<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.BorderPane?>
<?import org.controlsfx.control.StatusBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<BorderPane stylesheets="@Main.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beowurks.jequityfx.controller.MainFormController">
  <top>
    <VBox>
      <MenuBar fx:id="menuBar">
        <menus>
          <Menu text="File">
            <items>
              <MenuItem styleClass="iconBackup" text="Backup"/>
              <MenuItem styleClass="iconRestore" text="Restore"/>
              <SeparatorMenuItem/>
              <MenuItem styleClass="iconMasterKey" text="Master Key..."/>
              <SeparatorMenuItem/>
              <MenuItem styleClass="iconPrint" text="Print..."/>
              <SeparatorMenuItem/>
              <MenuItem styleClass="iconExport" text="Export..."/>
              <SeparatorMenuItem/>
              <MenuItem fx:id="menuExit" styleClass="iconExit" text="Exit" onAction="#exitApplication"/>
            </items>
          </Menu>
          <Menu text="Edit">
            <items>
              <MenuItem text="Copy"/>
              <MenuItem text="Cut"/>
              <MenuItem text="Paste"/>
            </items>
          </Menu>
          <Menu text="Data">
            <items>
              <MenuItem styleClass="iconGroups" text="Groups"/>
              <MenuItem styleClass="iconUpdate" text="Update"/>
              <MenuItem styleClass="iconRefresh" text="Refresh"/>
            </items>
          </Menu>
          <Menu text="Tools">
            <items>
              <MenuItem styleClass="iconOptions" text="Options..."/>
              <SeparatorMenuItem/>
              <MenuItem styleClass="iconSampleData" text="Sample Data..."/>
            </items>
          </Menu>
          <Menu text="Help">
            <items>
              <MenuItem styleClass="iconCredits" text="Credits" onAction="#showCredits"/>
              <MenuItem styleClass="iconCheckForUpdates" text="Check for Updates..." onAction="#showUpdates"/>
              <SeparatorMenuItem/>
              <MenuItem styleClass="iconAbout" text="About" onAction="#showAbout"/>
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox alignment="CENTER_LEFT" >
        <ComboBox fx:id="cboGroup" />
        <ToolBar>
          <Button fx:id="btnUpdate" text="Update"/>
          <Button fx:id="btnRefresh" text="Refresh"/>
        </ToolBar>
      </HBox>
    </VBox>
  </top>
  <center>
    <TabPane>
      <Tab fx:id="tabFinancial" text="Financial" closable="false"/>
      <Tab fx:id="tabDaily" text="Daily" closable="false"/>
      <Tab fx:id="tabReports" text="Reports" closable="false"/>
      <Tab fx:id="tabHistorical" text="Historical" closable="false"/>
      <Tab fx:id="tabGroup" text="Group" closable="false"/>
    </TabPane>
  </center>
  <bottom>
    <StatusBar fx:id="statusBar" text="Welcome to J'EquityFX" progress="0.0"></StatusBar>
  </bottom>
</BorderPane>
