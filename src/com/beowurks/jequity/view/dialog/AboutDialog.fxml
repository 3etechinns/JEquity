<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.HyperlinkLabel?>
<GridPane hgap="10"
          vgap="10"
          xmlns="http://javafx.com/javafx/8.0.141"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.beowurks.jequity.controller.AboutBoxController"
          stylesheets="/com/beowurks/jequity/view/css/Main.css">
  <padding>
    <Insets top="10" right="10" bottom="10" left="10"/>
  </padding>

  <VBox alignment="TOP_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
    <Hyperlink fx:id="lnkLogo" wrapText="false"/>
    <HyperlinkLabel fx:id="lnkLicense" />
  </VBox>

  <VBox alignment="TOP_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="0">
    <Hyperlink fx:id="lnkApplicationName" wrapText="true"/>
    <Label fx:id="lblApplicationVersion"/>
    <HyperlinkLabel fx:id="lnkCopyright"/>

    <TableView fx:id="tblEnvironment">
      <columns>
        <TableColumn fx:id="colKey" prefWidth="200.0" text="Key"/>
        <TableColumn fx:id="colValue" prefWidth="400.0" text="Value"/>
      </columns>
    </TableView>
  </VBox>
</GridPane>
